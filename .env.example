# Databricks Configuration
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-personal-access-token

# LLM Configuration (Foundation Model API - pay-per-token)
DATABRICKS_LLM_ENDPOINT=databricks-meta-llama-3-1-70b-instruct
# For lower cost, use: databricks-meta-llama-3-1-8b-instruct

# Vector Search (optional)
DATABRICKS_VECTOR_INDEX=main.avatar_assistant.databricks_docs_index

# TTS Configuration (Edge-TTS is FREE)
TTS_PROVIDER=edge-tts
TTS_VOICE=en-US-JennyNeural

# Cost Control Settings
MAX_TOKENS_PER_RESPONSE=300
CACHE_TTL_SECONDS=3600
ENABLE_RESPONSE_CACHE=true

# Logging
LOG_LEVEL=INFO
